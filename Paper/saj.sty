%   AUTHORS
%  *********

\def \authors#1{\baselineskip 3.1mm{{\bf \centerline{#1}}\vskip 2mm}}
 
%   ADDRESS
%  *********

\def \address#1{\parindent=0cm{\leftskip =0pt plus 10cm
     \rightskip =0pt plus 10cm \parfillskip =0pt
     {\ninei #1}
     \vskip 2mm}\parindent=1cm}
 
%   EMAIL
%  *******

\def \Email#1{\centerline{{\ninerm E--mail:} {\ninei #1}}
     \vskip 4mm}
 
